page, .foods {
  height: 98%;
  display: flex;
  justify-content: space-between;
}

.left {
  width: 25%;
  height: 98%;
  border-right: solid 2rpx #ddd;
}

.titel {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-left: 6rpx solid #fff;
}

.titel.on {
  color: #ab956d;
  border-color: #ab956d;
}

.right {
  position: relative;
  height: 90%;
  width: 75%;
}

.foods-list {
  padding: 20rpx 0 20rpx 0;
  display: flex;
  justify-content: space-between;
  height: 200rpx;
  border-bottom: 2rpx solid rgb(14, 13, 13);
  box-sizing: border-box;
}

.image-box {
  flex: 1;
  display: flex;
  justify-content: center;
}

.image-box image {
  width: 195rpx;
  height: 145rpx;
  margin-right: 40rpx;
}

.information {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.foodsname {
  float: left;
  font-size: 32rpx;
}

.monthsales {
  display: flex;
  justify-content: flex-end;
  font-size: 22rpx;
  color: #999;
}

.detail {
  display: flex;
  justify-content: flex-start;
  font-size: 22rpx;
  color: #999;
}

.price {
  display: flex;
  justify-content: space-between;
  color: red;
  font-size: 40rpx;
}

.price image {
  width: 40rpx;
  height: 40rpx;
}

.bottom {
  height: 220rpx;
  background-color: black;
}

.paybottom {
  display: flex;
  justify-content: space-evenly;
  height: 160rpx;
  position: fixed;
  width: 100%;
  background-color: gray;
  bottom: 0;
  border-bottom: 1px solid #e5e5e5;
}

.icon-group {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  width: 40%;
  height: 100rpx;
}



.frist-icon {
  height: 100rpx;
  width: 100rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  justify-content: space-between;
  border-right: solid 6rpx #fff;
}
.frist-icon image {
  margin-left: 25rpx;
  height: 50rpx;
  width: 50rpx;
}
.mid-icon{
  display: flex;
  justify-content: center;
  width: 100rpx;
  height: 100rpx;
  margin: 30rpx 20rpx 30rpx 20rpx;
}
.mid-icon image {
  height: 80rpx;
  width: 800rpx;
}
.pricetext{
  width: 600rpx;
  height: 160rpx;
  display: flex;
  justify-content: space-between;
}
.redprice{
   display: flex;
  justify-content: center;
  text-align: center;
}
.redprice text{
  color: red;
  font-size: 50rpx;
  margin-top: 46rpx;
   height: 160rpx;
  width: 200rpx;
}
.sale{
  background-color: yellow;
  height: 160rpx;
  width: 200rpx;
  display: flex;
  justify-content: center;
  text-align: center;
}
.sale text{
  margin-top: 46rpx;
  font-size: 38rpx;
  color: black;
}


